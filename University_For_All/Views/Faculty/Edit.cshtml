@model University_For_All.Models.Faculty

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Faculty/_FacultyLayout.cshtml";
}


@using (@Html.BeginForm("Save", "Faculty", FormMethod.Post, new { enctype = "multipart/form-data" }))
{ 
    <div class="col-md-10">
        <div class="image-upload">
            <label for="file-input">
                <img id="image_preview" src="@Url.Content(Model.fc_logo)" title="change Image" style="cursor: pointer; width: 100px; height: 100px; border-radius: 50%;" />
            </label>

            <input id="file-input" name="upload" type="file" onchange="readfile(this)" style="display: none" />
        </div>
    </div>
    @Html.ValidationMessageFor(model => @Model.fc_logo, "", new { @class = "text-danger" })
    <div>
        @Html.LabelFor(f => f.fc_name)
        @Html.TextBoxFor(f => f.fc_name, new { @class = "form-control" })

    </div>

    <div>
        @Html.LabelFor(f => f.fc_description)
        @Html.TextBoxFor(f => f.fc_description, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(f => f.id)
    <button type="submit" class="btn btn-primary">Save</button>
}
    <script type="text/javascript">

    function readfile(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#image_preview').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
