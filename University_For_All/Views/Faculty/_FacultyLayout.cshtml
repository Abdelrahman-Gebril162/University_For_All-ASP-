<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/faculty/css")
    <style>
        .dropdown:hover > .dropdown-menu {
            display: block;
        }

        .dropdown > .dropdown-toggle:active {
            /*Without this, clicking will make it sticky
        // pointer-events: none;*/
        }
    </style>

</head>
<body>
    <section class="lets-learn">
        <div class="slogon">
            Let's Learn
        </div>
        <div class="header">
            <div class="navbar">

                @*<form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" style="width:400px " type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">&#9906;</button>
                </form>*@


                <div class="nav-links">
                    <ul>
                        <li><a href="/Home"> Home</a> </li>
                        <li><a href="\ChatApp"> ChatApp</a> </li>
                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Adminstration ▼
                            </a>
                            

                            
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Administration/ListRoles">Roles</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Administration/manageStudent">Student</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Administration/manageStaff">Staff</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Administration/manageFaculty">Faculties</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Departments/Index">Departments</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Courses/Index">Courses</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/Takes/Index">Enrolement</a>
                            </div>
                        </li>
                    }
                    </ul>
                </div>
                <div class="dropdown">
                    @if (User.IsInRole("professor") | User.IsInRole("admin"))
                    {
                        @Html.Partial("_StaffLoginPartial")
                    }
                    else if (User.IsInRole("student"))
                    {
                        @Html.Partial("_LoginPartial")
                    }
                    else
                    {
                        @Html.Partial("_LoginPartial")
                    }
                </div>
                <div>
                    <a href="/home"><img src="~/Content/Site(Image,video)/Faculty/Image/logo.png" style="width: 100px" class="img-responsive" alt=""></a>

                </div>
            </div>
        </div>
        <div class="data">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="svg" style="position: relative;bottom: 37px">
                            <img src="~/Content/Site(Image,video)/Faculty/Image/Group%20706.svg" alt="">
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="content text-center" style="position: relative; bottom: 30px;font-weight: bold">
                            <p style="color: aliceblue;text-shadow: 2px 2px gray;"> Future University provides you with the easiest and most sophisticated way to E-Learning</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

@RenderBody()

@Scripts.Render("~/faculty/js")
@Scripts.Render("~/bundles/jqueryval");
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</body>
</html>
