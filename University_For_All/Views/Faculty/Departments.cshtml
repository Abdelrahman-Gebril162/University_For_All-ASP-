@model IEnumerable<University_For_All.Models.Department>

@{
    ViewBag.Title = "Faculty-Departments";
    Layout = "~/Views/Faculty/_FacultyDetailsLayout.cshtml";
}

<style>
    .cards {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-content: flex-start;
        max-height: 200vh;
    }

    .card {
        width: 250px;
        margin: 10px;
        border: 1px solid #ccc;
        box-shadow: 2px 2px 6px 0px rgba(0,0,0,0.3);
    }

    .card img {
        width: 100%;
        max-height: 150px;
    }

    .card .text {
        padding: 0 20px 20px;
    }

    .card .text > .button {
        background: gray;
        border: 0;
        color: white;
        padding: 10px;
        width: 100%;
    }
</style>

<h2 style="text-align: center">Departments Cards</h2>
<main class="container cards ">
    
    @foreach(var department in Model)
    { 
        <article class="card">
            <h1 align="center">@department.name</h1>
            <hr/>
            <div class="card-body">
                @department.description
            </div>
            @if (User.IsInRole("admin"))
            {
                @Html.ActionLink("More Info", "Details", "Departments", new { id = department.id }, new { @class = "btn btn-outline-secondary" })

            }
        </article>
    }
</main>