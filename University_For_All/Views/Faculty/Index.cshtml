@model IEnumerable<University_For_All.Models.Faculty>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Faculty/_FacultyLayout.cshtml";
}
@{
    var right = true;
}
<style>
    .dropdown:hover > .dropdown-menu {
        display: block;
    }

    .dropdown > .dropdown-toggle:active {
        /*Without this, clicking will make it sticky
        // pointer-events: none;*/
    }
</style>
<section class="lets-learn">
    <div class="slogon">
        Let's Learn
    </div>
    <div class="header">
        <div class="navbar">

            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" style="width:400px " type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">&#9906;</button>
            </form>


            <div class="nav-links">
                <ul>
                    <li><a href="#"> Home</a> </li>
                    <li><a href="#"> ChatApp</a> </li>
                    <li><a href="#">My Profile</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Adminstration ▼
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">User_Role</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Student</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Staff</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Faculties</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Departments</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Courses</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Enrolement</a>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="dropdown">
                @Html.Partial("_LoginPartial")
            </div>
            <div>
                <a href="/home"><img src="~/Content/Site(Image,video)/Faculty/Image/logo.png" style="width: 100px"  class="img-responsive" alt=""></a> 

            </div>
        </div>
    </div>
    <div class="data">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="svg" style="position: relative;bottom: 37px">
                        <img src="~/Content/Site(Image,video)/Faculty/Image/Group%20706.svg" alt="">
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="content text-center" style="position: relative; bottom: 30px;font-weight: bold">
                        <p style="color: aliceblue;text-shadow: 2px 2px gray;"> Future University provides you with the easiest and most sophisticated way to E-Learning</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="creative">
    @foreach (var faculty in @Model)
    {
        if (right)
        {
            <div class="right">
                <a href="/Faculty/Details?id=@faculty.id">
                    <h1>Faculty of computer and information</h1><img src="@Url.Content(faculty.fc_logo)">
                </a>
            </div>
            right = false;
        }
        else
        {
            <div class="left"><a href="/Faculty/Details?id=@faculty.id"><h1>Faculty of Engineering</h1><img src="@Url.Content(faculty.fc_logo)"></a></div>
            right = true;
        }
    }
</section>


