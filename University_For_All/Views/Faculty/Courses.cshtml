@model IEnumerable<University_For_All.Models.Course>

@{
    ViewBag.Title = "Faculty-Courses";
    Layout = "~/Views/Faculty/_FacultyDetailsLayout.cshtml";
}

<style>
    .cards {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-content: flex-start;
        max-height: 200vh;
    }

    .card {
        width: 250px;
        margin: 10px;
        border: 1px solid #ccc;
        box-shadow: 2px 2px 6px 0px rgba(0,0,0,0.3);
    }

    .card img {
        width: 100%;
        max-height: 150px;
    }

    .card .text {
        padding: 0 20px 20px;
    }

    .card .text > .button {
        background: gray;
        border: 0;
        color: white;
        padding: 10px;
        width: 100%;
    }
</style>

<h2 style="text-align: center">Courses Cards</h2>
<main class="container cards ">
    
    @foreach(var course in Model)
    { 
        <article class="card">
            <h1 align="center">@course.cr_title</h1>
            <div class="card-body">
                Credit Hours: @course.cr_credit_hours <br/>
                Studey In Level : @course.cr_level
                Instructor Name : @string.Concat(course.Instructor.ints_fname," ",course.Instructor.inst_lname)<br/>

                
            </div>
            @if (User.IsInRole("admin"))
            {
                @Html.ActionLink("More Info", "Details", "Courses", new { id = course.id }, new { @class = " btn btn-outline-secondary" })
            }
        </article>
    }
</main>