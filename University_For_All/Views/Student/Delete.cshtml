@model University_For_All.Models.Student

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Home/_HomeLayout2.cshtml";
}

<h2 align="center" style="color: red">Delete</h2>
<h3>Are you sure you want to delete this?</h3>
<hr />
<div class="container" align="center">

    <img src="@Url.Content(@Model.st_picture)" class="figure-img" style="width: 200px; height: 200px; border-radius: 50%"/>
    <h4>@string.Join(" ", Model.st_fname, Model.st_lname)</h4>
    @using (Html.BeginForm("Delete", "Student"))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-outline-danger" />
        </div>
            @Html.HiddenFor(s => s.id)
    }
</div>

